<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivCentro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibPausa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivCentro"
        app:layout_constraintBottom_toBottomOf="@id/ivCentro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibReset"
        android:src="@drawable/ic_pause"
        android:background="@color/teal_200"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivCentro"
        app:layout_constraintBottom_toBottomOf="@id/ivCentro"
        app:layout_constraintStart_toEndOf="@id/ibPausa"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_200"
        android:src="@drawable/ic_restart"
        />

    <TextView
        android:id="@+id/tvP1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivCentro"
        android:text="05:00"
        android:textSize="100sp"
        android:gravity="center"
        android:rotation="180"
        />
    <TextView
        android:id="@+id/tvP2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivCentro"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="05:00"
        android:textSize="100sp"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>