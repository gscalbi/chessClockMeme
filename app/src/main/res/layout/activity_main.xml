<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toStartOf="@id/ibPausa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvP1"
        app:layout_constraintBottom_toBottomOf="@+id/tvP1"
        tools:layout_editor_absoluteY="338dp"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibPausa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:src="@drawable/ic_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvP1"
        app:layout_constraintBottom_toBottomOf="@+id/tvP1"
        tools:layout_editor_absoluteY="338dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:src="@drawable/ic_restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibPausa"
        app:layout_constraintTop_toBottomOf="@+id/tvP1"
        app:layout_constraintBottom_toBottomOf="@+id/tvP1"
        tools:layout_editor_absoluteY="338dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvP1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:rotation="180"
        android:text="05:00"
        android:textSize="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvP2"
        />

    <TextView
        android:id="@+id/tvP2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="05:00"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvP1"/>


</androidx.constraintlayout.widget.ConstraintLayout>